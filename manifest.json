{
  "manifest_version": 3,
  "name": "Job Tracker Extension",
  "version": "1.0.0",
  "description": "Track job applications across different job boards",
  "permissions": [
    "activeTab",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://*.indeed.com/*",
    "https://*.linkedin.com/*",
    "https://*.glassdoor.com/*",
    "https://*.monster.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.angel.co/*",
    "https://*.wellfound.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.workday.com/*",
    "https://sheets.googleapis.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.indeed.com/*",
        "https://*.linkedin.com/*",
        "https://*.glassdoor.com/*",
        "https://*.monster.com/*",
        "https://*.ziprecruiter.com/*",
        "https://*.angel.co/*",
        "https://*.wellfound.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.workday.com/*",
        "https://*/*"
      ],
      "js": ["content-standalone.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Tracker"
  }
}